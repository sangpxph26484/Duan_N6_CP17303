<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/brchim"
    >
    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorActionbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang Chủ"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_dangxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logout"
        android:layout_gravity="right"
        android:padding="8dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:layout_gravity="right"
        android:padding="8dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xinchaoshop"
            android:textStyle="bold"
            android:textColor="#089C8E"
            android:textSize="15sp"

            />
        <TextView
            android:id="@+id/tv_tenshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặng Chương !"
            android:textStyle="bold"
            android:textColor="#089C8E"
            android:textSize="15sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/botron_linner"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doanh Thu"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#000"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_tesst"/>

            <TextView
                android:id="@+id/trangchu_tv_xemchitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem Chi Tiết >>"
                android:textColor="#0E3AD8"
                android:textSize="15dp"
                android:layout_marginLeft="90dp"
                android:textStyle="italic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/trangchu_tv_doanhthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:text="1.000.000"
                android:textColor="#000"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="10dp"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số lượng đơn"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="Đã Giao"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chưa Giao"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                >
                <TextView
                    android:id="@+id/trangchu_tv_donhangmoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="100"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/trangchu_tv_dagiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="0"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />
                <TextView
                    android:id="@+id/trangchu_tv_chuagiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="10"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/trangchu_img_themsanpham"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Thêm Sản Phẩm"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/trangchu_img_voucher"
                android:layout_width="91dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_vou"
                />
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/trangchu_img_quanlybl"
                android:layout_width="91dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_hovaten"
                />
            <TextView
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Quản Lý Bình Luận"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>